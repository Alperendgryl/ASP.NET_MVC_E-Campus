@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/IndexStyle.css" rel="stylesheet">
    <script src="~/Scripts/redirect.js"></script>
</head>

<body class="bg-white">
    <section class="px-5">
        <div class="row justify-content-center">
            <div class="col">
                <img src="https://e-campus.isikun.edu.tr/Content/img/logo.png" style="height: 200px">

                <h5>Users can log in using citizenship number as username and password.</h5>

                <input type="text" name="ssn" id="ssn" class="login-form" style="width:400px; height:20px" placeholder="SSN" required />

                <input type="password" name="password" id="password" class="login-form" style="width:400px; height:20px" placeholder="Password" required />

                <div>
                    <button onclick="login()" class="btn btn-blue" style="width:400px; height:40px">Login</button>
                </div>

                <h5 class="footer">2023 © E-Campus - Center for Educational Technologies</h5>
            </div>
        </div>
    </section>
</body>
</html>
